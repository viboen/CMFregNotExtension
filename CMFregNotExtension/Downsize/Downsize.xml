<executable>

  <category>CMF Registration</category>
  <title>Downsize Image</title>
  <version>2.0</version>
  <documentation-url>http://www.na-mic.org/Wiki/index.php/Slicer3:Training</documentation-url>
  <license></license>
  <contributor>Vinicius Boen and Mason Winsauer, Neuro Image Resarch and Analysis Laboratory, UNC Medical School, UofM School of Dentistry</contributor>
  <acknowledgements>A collaborative effort with Dr. Martin Styner, Dr. Beatriz Paniagua and Dr. Lucia Cevidanes</acknowledgements>  
	<parameters>
		<label>Downsize</label>
		<description>Control how the module operates</description>	
		<string>
          		    <name>outputImageSpacing</name>
          		    <flag>-s</flag>
          		    <longflag>--spacing</longflag>
          		    <description>Spacing along each dimension (0 means to use input spacing)</description>
      			    <label>Spacing</label>
      			    <default>0,0,0</default>
   		</string>
   		<image>
   			    <name>InputVolume</name>
      			    <index>0</index>
      			    <description><![CDATA[Input volume to be resampled]]></description>
      			    <label>Input Volume</label>
      			    <channel>input</channel>
  		</image>
  		<image>
  			    <name>outputVolume</name>
      			    <index>1</index>
      			    <description><![CDATA[Resampled Volume]]></description>
      			    <label>Output Volume</label>
      			    <channel>output</channel>
    		</image>
	</parameters> 
  </executable>
